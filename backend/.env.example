# MongoDB Connection
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/clinical_trials?appName=Cluster0
DATABASE_NAME=clinical_trials

# Security - MUST BE SET IN PRODUCTION
# Generate SECRET_KEY: python -c 'import secrets; print(secrets.token_urlsafe(32))'
SECRET_KEY=generate-a-strong-key-with-32-chars-minimum-do-not-use-default

# Token Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - List of allowed origins (comma-separated)
# Example: http://localhost:3000,https://myapp.com
ALLOWED_ORIGINS=http://localhost:3000

# Redis Configuration  
REDIS_URL=redis://localhost:6379

# Blockchain
BLOCKCHAIN_NETWORK=fabric

# IPFS
IPFS_URL=http://localhost:5001
IPFS_GATEWAY=https://ipfs.io/ipfs

# Cryptographic Keys - MUST BE SET IN PRODUCTION
# Generate keys: python -c 'import secrets; print(secrets.token_urlsafe(32))'
SIGNATURE_SECRET_KEY=generate-a-strong-key-with-32-chars-minimum
TOKENIZATION_SECRET_KEY=generate-a-strong-key-with-32-chars-minimum
ZKP_SECRET=generate-a-strong-key-with-32-chars-minimum

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO

# Optional: Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
